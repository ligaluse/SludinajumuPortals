@model JaunsSludinajumsModel
@{
    ViewData["Title"] = "JaunsSludinajums";
}

<h2>Jauns sludinājums</h2>
@Html.ValidationSummary()


<form class="form-horizontal" action="JaunsSludinajums" method="post">
    <div class="form-group">

        <label class="col-sm-2 control-label">Kategorija</label>
        <div class="col-sm-4">
            <select asp-for="CategoryId" asp-items="@(new SelectList(Model.categories, "Id", "Title"))" class="form-control">
                <option value="">-- Izvēlēties kategoriju</option>
            </select>
        </div>
    </div>
    <div class="form-group">

        <label for="cena" class="col-sm-2 control-label">Cena</label>
        <div class="col-sm-4">
            <input asp-for="Price" class="form-control" id="cena">
        </div>
    </div>
    <div class="form-group">

        <label for="location" class="col-sm-2 control-label">Atrašanās vieta</label>
        <div class="col-sm-4">
            <input asp-for="Location" class="form-control" id="location">
        </div>
    </div>
    <div class="form-group">

        <label for="phone" class="col-sm-2 control-label">Tālrunis</label>
        <div class="col-sm-4">
            <input asp-for="Phone" class="form-control" id="phone">
        </div>
    </div>
    <div class="form-group">

        <label for="email" class="col-sm-2 control-label">E-pasts</label>
        <div class="col-sm-4">
            <input asp-for="Email" class="form-control" id="email">
        </div>
    </div>
    <div class="form-group">

        <label for="description" class="col-sm-2 control-label">Apraksts</label>
        <div class="col-sm-4">
            <textarea asp-for="Description" class="form-control" id="description" rows="5"></textarea>
        </div>
    </div>


    <div class="row">
        <input type="submit" value="Saglabāt sludinājumu">
    </div>
</form>