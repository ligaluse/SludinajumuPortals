@model List<Sludinajumi.Logic.Item>
@{
    ViewData["Title"] = "Kategorija";
}

<h2>Kategorija</h2>

<table class="table table-hover">
    <tr>
        <th>Attēls</th>
        <th>Apraksts</th>
        <th>Cena</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.Photo" />
            <td><a asp-controller="Add" asp-action="Sludinajums" asp-route-id="@item.Id" class="btn">@item.Description</a></td>
            <td>$@item.Price</td>
        </tr>
    }
</table>
